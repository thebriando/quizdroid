<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <RadioGroup
            android:layout_width="395dp"
            android:layout_height="wrap_content" android:id="@+id/answer_group"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/question"
    >
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ans0" android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ans1" android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ans2" android:layout_weight="1"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ans3" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:text="Question"
            android:gravity="center"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/question"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="207dp"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/answer_group" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Choose an answer"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/answer_group" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/answer_group"/>
</android.support.constraint.ConstraintLayout>
